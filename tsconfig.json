{
	"compilerOptions": {
		/* Basic Options */
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "es6", "dom.iterable", "scripthost"],
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"importHelpers": true,
		"noEmitOnError": true,

		/* Strict Type-Checking Options */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules"],
	"include": ["./src/"]
}
